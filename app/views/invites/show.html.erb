<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <div class="inline-block gradient-orange rounded-2xl px-8 py-4 mb-4 shadow-glow-orange">
        <h1 class="text-5xl font-bold text-white mb-2">ðŸŽµ B-Side</h1>
        <p class="text-xl text-white">Music Challenge</p>
      </div>
    </div>

    <div class="glass-card p-8 shadow-xl">
      <h2 class="text-3xl font-bold mb-6 text-center text-white">You're Invited! ðŸŽ‰</h2>
      
      <div class="glass-medium rounded-2xl p-6 mb-6 border border-soundcloud-orange/30 bg-soundcloud-orange/10">
        <p class="text-gray-400 text-sm mb-2 font-semibold">Join the group:</p>
        <p class="text-3xl font-bold text-soundcloud-orange"><%= @group.name %></p>
        <p class="text-sm text-gray-400 mt-2 font-medium">
          <%= pluralize(@group.members.count, "member") %>
        </p>
      </div>

      <% if current_user %>
        <% if @already_member %>
          <div class="text-center">
            <p class="text-green-400 mb-4 font-semibold text-lg">âœ“ You're already a member of this group!</p>
            <%= link_to "Go to Group", group_path(@group), 
                class: "block w-full btn-primary text-center" %>
          </div>
        <% else %>
          <%= button_to "Join Group", accept_invite_path(@group.invite_code), method: :post,
              class: "w-full btn-primary" %>
          <p class="text-sm text-gray-400 text-center mt-4 font-medium">
            Signed in as <%= current_user.display_name %>
          </p>
        <% end %>
      <% else %>
        <div class="space-y-4">
          <%= link_to "Sign In to Join", new_user_session_path, 
              class: "block w-full btn-primary text-center" %>
          <%= link_to "Create Account", new_user_registration_path, 
              class: "block w-full glass-medium hover:glass-strong text-white px-6 py-3 rounded-xl font-semibold text-center transition-all duration-200 border border-white/10" %>
        </div>
      <% end %>
    </div>

    <div class="mt-8 glass-card p-6">
      <h3 class="text-2xl font-bold mb-5 text-white text-center">How it works:</h3>
      <div class="grid grid-cols-1 gap-4 text-left">
        <div class="flex items-start glass-subtle p-4 rounded-xl">
          <span class="text-soundcloud-orange font-bold text-2xl mr-4">1.</span>
          <span class="text-gray-300 font-medium">Submit your favorite song for the week's category</span>
        </div>
        <div class="flex items-start glass-subtle p-4 rounded-xl">
          <span class="text-soundcloud-orange font-bold text-2xl mr-4">2.</span>
          <span class="text-gray-300 font-medium">Vote on other members' submissions (1-10 scale)</span>
        </div>
        <div class="flex items-start glass-subtle p-4 rounded-xl">
          <span class="text-soundcloud-orange font-bold text-2xl mr-4">3.</span>
          <span class="text-gray-300 font-medium">Compete across 10-week seasons for glory!</span>
        </div>
      </div>
    </div>
  </div>
</div>
