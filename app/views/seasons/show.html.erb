<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <%= link_to @group, class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @group.name %>
    <% end %>
  </div>

  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-4xl font-bold text-white">Season <%= @season.number %></h1>
      <% if @season.active %>
        <span class="bg-gradient-to-r from-soundcloud-orange to-soundcloud-coral text-white px-5 py-2 rounded-full text-sm font-semibold shadow-glow-orange">
          âœ¨ Active Season
        </span>
      <% end %>
    </div>
    <p class="text-gray-400 text-lg">Started <%= @season.start_date.strftime("%B %d, %Y") %></p>
  </div>

  <%# Season Leaderboard %>
  <div class="mb-8 glass-card p-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-white">ğŸ† Current Standings</h2>
      <%= link_to "Full Leaderboard â†’", group_season_leaderboard_path(@group, season_id: @season.id), 
          class: "text-soundcloud-orange hover:text-soundcloud-coral text-sm font-semibold transition-colors" %>
    </div>
    
    <% if @rankings.any? %>
      <div class="space-y-4">
        <% @rankings.first(3).each_with_index do |ranking, index| %>
          <div class="flex items-center justify-between glass-medium rounded-xl p-5 border <%= index == 0 ? 'border-soundcloud-orange/30 shadow-glow-orange' : 'border-white/10' %>">
            <div class="flex items-center space-x-4">
              <span class="text-4xl">
                <%= index == 0 ? "ğŸ¥‡" : index == 1 ? "ğŸ¥ˆ" : "ğŸ¥‰" %>
              </span>
              <span class="font-bold text-xl text-white"><%= ranking[:user].display_name %></span>
            </div>
            <div class="text-right">
              <span class="text-3xl font-bold <%= index == 0 ? 'gradient-orange bg-clip-text text-transparent' : 'text-soundcloud-orange' %>"><%= ranking[:total_score].round(2) %></span>
              <span class="text-sm text-gray-400 block font-semibold">
                <%= pluralize(ranking[:games_played], "game") %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-400 text-center py-8 text-lg">No submissions yet this season</p>
    <% end %>
  </div>

  <%# Weeks %>
  <div>
    <h2 class="text-2xl font-bold mb-6 text-white">Weeks</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @weeks.each do |week| %>
        <%= link_to group_season_week_path(@group, @season, week), class: "block group" do %>
          <div class="glass-card p-6 hover:shadow-glow-orange transition-all duration-300 transform hover:scale-105 hover:border-soundcloud-orange/30">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-white group-hover:text-soundcloud-orange transition-colors">Week <%= week.number %></h3>
              <% if week.submission_phase? %>
                <span class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
                  ğŸ“ Submissions
                </span>
              <% elsif week.voting_phase? %>
                <span class="bg-gradient-to-r from-soundcloud-orange to-soundcloud-coral text-white px-3 py-1 rounded-full text-xs font-semibold shadow-glow-orange">
                  ğŸ—³ï¸ Voting
                </span>
              <% elsif week.results_phase? %>
                <span class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
                  ğŸ† Results
                </span>
              <% end %>
            </div>
            
            <p class="text-soundcloud-orange font-bold mb-3 text-lg"><%= week.category %></p>
            
            <div class="text-sm text-gray-400 font-medium">
              <% if week.submission_phase? %>
                <p>Submit by <%= week.submission_deadline.strftime("%b %d, %I:%M %p") %></p>
              <% elsif week.voting_phase? %>
                <p>Vote by <%= week.voting_deadline.strftime("%b %d, %I:%M %p") %></p>
              <% else %>
                <p>Ended <%= week.voting_deadline.strftime("%b %d, %Y") %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
