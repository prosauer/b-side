<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to @group, class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @group.name %>
    <% end %>
  </div>

  <div class="glass-card p-8">
    <h1 class="text-4xl font-bold mb-8 text-white">ðŸš€ Start New Season</h1>

    <div class="glass-medium border border-blue-500/30 rounded-2xl p-6 mb-8 bg-blue-500/10">
      <h3 class="font-bold text-blue-400 mb-4 text-lg">What happens when you start a season?</h3>
      <ul class="list-disc list-inside text-blue-300 space-y-2 font-medium">
        <li>10 weeks will be created automatically</li>
        <li>Any previous active season will be deactivated</li>
        <li>You'll need to set the category for each week</li>
        <li>Members can start submitting songs immediately</li>
      </ul>
    </div>

    <%= form_with url: group_seasons_path(@group), method: :post, class: "space-y-6" do |f| %>
      <div class="glass-medium rounded-2xl p-6 border border-soundcloud-orange/30 bg-soundcloud-orange/10">
        <p class="text-2xl font-bold mb-2 text-soundcloud-orange">Season <%= (@group.seasons.maximum(:number) || 0) + 1 %></p>
        <p class="text-sm text-gray-400 font-semibold">Start date: <%= Date.current.strftime("%B %d, %Y") %></p>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= f.submit "Start Season", class: "btn-primary cursor-pointer" %>
        <%= link_to "Cancel", @group, class: "text-gray-400 hover:text-white font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
