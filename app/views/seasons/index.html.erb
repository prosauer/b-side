<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <%= link_to @group, class: "text-purple-400 hover:text-purple-300 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @group.name %>
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold">All Seasons</h1>
    <% if @group.memberships.find_by(user: current_user).admin? %>
      <%= link_to "Start New Season", new_group_season_path(@group), 
          class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-lg font-semibold" %>
    <% end %>
  </div>

  <% if @seasons.any? %>
    <div class="space-y-4">
      <% @seasons.each do |season| %>
        <%= link_to group_season_path(@group, season), class: "block" do %>
          <div class="bg-gray-800 rounded-lg p-6 hover:bg-gray-750 transition border border-gray-700 hover:border-purple-500">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-2xl font-semibold mb-2">Season <%= season.number %></h3>
                <% start_time = season.start_at || season.start_date.in_time_zone %>
                <p class="text-sm text-gray-400">Started <%= start_time.strftime("%B %d, %Y %I:%M %p") %></p>
              </div>
              <div class="text-right">
                <% if season.active %>
                  <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-sm font-semibold">
                    Active
                  </span>
                <% else %>
                  <span class="bg-gray-600/20 text-gray-400 px-3 py-1 rounded-full text-sm">
                    Complete
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-gray-800 rounded-lg border border-gray-700">
      <p class="text-gray-400 mb-6">No seasons yet</p>
      <% if @group.memberships.find_by(user: current_user).admin? %>
        <%= link_to "Start First Season", new_group_season_path(@group), 
            class: "inline-block bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold" %>
      <% end %>
    </div>
  <% end %>
</div>
