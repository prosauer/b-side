<%= turbo_frame_tag dom_id(submission, :like) do %>
  <% if user_like %>
    <%= button_to "♥",
                  submission_like_path(submission, user_like),
                  method: :delete,
                  class: "text-2xl text-red-500 hover:text-red-400",
                  aria: { label: "Unlike this song" } %>
  <% else %>
    <%= button_to "♡",
                  submission_likes_path(submission),
                  method: :post,
                  class: "text-2xl text-gray-400 hover:text-red-400",
                  aria: { label: "Like this song" } %>
  <% end %>
<% end %>
