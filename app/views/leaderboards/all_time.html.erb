<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to @group, class: "text-purple-400 hover:text-purple-300 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @group.name %>
    <% end %>
  </div>

  <div class="bg-gray-800 rounded-lg p-8 border border-gray-700">
    <h1 class="text-3xl font-bold mb-2">All-Time Leaderboard</h1>
    <p class="text-gray-400 mb-8">Across all seasons in <%= @group.name %></p>

    <% if @rankings.any? %>
      <%# Top 3 Podium %>
      <div class="grid grid-cols-3 gap-4 mb-8">
        <% [1, 0, 2].each do |index| %>
          <% if ranking = @rankings[index] %>
            <div class="<%= index == 0 ? 'order-2' : index == 1 ? 'order-1' : 'order-3' %>">
              <div class="bg-gray-900 rounded-lg p-6 border <%= index == 0 ? 'border-yellow-500' : 'border-gray-700' %> text-center">
                <div class="text-5xl mb-3">
                  <%= index == 0 ? "ðŸ‘‘" : index == 1 ? "ðŸ¥ˆ" : "ðŸ¥‰" %>
                </div>
                <p class="font-bold text-xl mb-2"><%= ranking[:user].display_name %></p>
                <p class="text-4xl font-bold text-purple-400 mb-2">
                  <%= ranking[:total_score].round(2) %>
                </p>
                <div class="text-sm text-gray-400">
                  <p><%= pluralize(ranking[:games_played], "game") %></p>
                  <p><%= pluralize(ranking[:seasons_played], "season") %></p>
                  <p>Avg points: <%= ranking[:average_score] %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <%# Full Rankings %>
      <div class="space-y-3">
        <h2 class="text-xl font-semibold mb-4">Full All-Time Standings</h2>
        <% @rankings.each_with_index do |ranking, index| %>
          <div class="bg-gray-900 rounded-lg p-4 border <%= index == 0 ? 'border-yellow-500' : 'border-gray-700' %>">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <span class="text-2xl font-bold text-gray-500 w-8 text-center">
                  <% if index == 0 %>
                    ðŸ‘‘
                  <% elsif index == 1 %>
                    ðŸ¥ˆ
                  <% elsif index == 2 %>
                    ðŸ¥‰
                  <% else %>
                    #<%= index + 1 %>
                  <% end %>
                </span>
                <div>
                  <p class="font-bold text-lg"><%= ranking[:user].display_name %></p>
                  <p class="text-sm text-gray-400">
                    <%= pluralize(ranking[:games_played], "game") %> â€¢ 
                    <%= pluralize(ranking[:seasons_played], "season") %> â€¢ 
                    <%= ranking[:average_score] %> avg points
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-3xl font-bold text-purple-400"><%= ranking[:total_score].round(2) %></p>
                <p class="text-xs text-gray-400">total points</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-400 text-center py-8">No data yet for this group</p>
    <% end %>
  </div>
</div>
