<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to group_season_week_path(@group, @season, @week), class: "text-purple-400 hover:text-purple-300 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Week <%= @week.number %>
    <% end %>
  </div>

  <div class="bg-gray-800 rounded-lg p-8 border border-gray-700">
    <h1 class="text-3xl font-bold mb-2">Week <%= @week.number %> Results</h1>
    <p class="text-purple-400 font-semibold text-lg mb-8"><%= @week.category %></p>

    <% if @rankings.any? %>
      <%# Top 3 Podium %>
      <div class="grid grid-cols-3 gap-4 mb-8">
        <% [1, 0, 2].each do |index| %>
          <% if ranking = @rankings[index] %>
            <div class="<%= index == 0 ? 'order-2' : index == 1 ? 'order-1' : 'order-3' %>">
              <div class="bg-gray-900 rounded-lg p-4 border <%= index == 0 ? 'border-yellow-500' : 'border-gray-700' %> text-center">
                <div class="text-4xl mb-2">
                  <%= index == 0 ? "ðŸ¥‡" : index == 1 ? "ðŸ¥ˆ" : "ðŸ¥‰" %>
                </div>
                <p class="font-bold text-lg mb-1"><%= ranking[:user].display_name %></p>
                <p class="text-3xl font-bold text-purple-400 mb-1">
                  <%= ranking[:total_points] %>
                </p>
                <p class="text-sm text-gray-400">
                  <%= pluralize(ranking[:total_points], "point") %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <%# Full Rankings %>
      <div class="space-y-3">
        <h2 class="text-xl font-semibold mb-4">All Submissions</h2>
        <% @rankings.each_with_index do |ranking, index| %>
          <div class="bg-gray-900 rounded-lg p-4 border <%= index == 0 ? 'border-yellow-500' : 'border-gray-700' %>">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <span class="text-2xl font-bold text-gray-500 w-8 text-center">
                  <% if index == 0 %>
                    ðŸ¥‡
                  <% elsif index == 1 %>
                    ðŸ¥ˆ
                  <% elsif index == 2 %>
                    ðŸ¥‰
                  <% else %>
                    #<%= index + 1 %>
                  <% end %>
                </span>
                <div>
                  <p class="font-bold text-lg"><%= ranking[:submission].song_title %></p>
                  <p class="text-purple-400 text-sm"><%= ranking[:submission].artist %></p>
                  <p class="text-gray-400 text-sm">by <%= ranking[:user].display_name %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-3xl font-bold text-purple-400"><%= ranking[:total_points] %></p>
                <p class="text-xs text-gray-400"><%= pluralize(ranking[:total_points], "point") %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-400 text-center py-8">No submissions yet</p>
    <% end %>
  </div>
</div>
