<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to group_season_week_path(@group, @season, @week), class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Week <%= @week.number %>
    <% end %>
  </div>

  <div class="glass-card p-8">
    <h1 class="text-4xl font-bold mb-2 text-white">Submit Your Song</h1>
    <p class="gradient-orange bg-clip-text text-transparent font-bold text-2xl mb-8"><%= @week.category %></p>

    <div class="glass-medium border border-blue-500/30 rounded-2xl p-5 mb-8 bg-blue-500/10">
      <p class="text-blue-300 text-sm leading-relaxed">
        <strong class="text-white">â±ï¸ Deadline:</strong> <%= @week.submission_deadline.strftime("%B %d at %I:%M %p") %>
        <br>
        <strong class="text-white">Time remaining:</strong> <%= distance_of_time_in_words(Time.current, @week.submission_deadline) %>
      </p>
    </div>

    <%= form_with model: @submission, url: group_season_week_submissions_path(@group, @season, @week), class: "space-y-6" do |f| %>
      <% if @submission.errors.any? %>
        <div class="glass-medium border border-red-500/30 rounded-2xl p-6 bg-red-500/10">
          <h3 class="font-bold text-red-400 mb-3 text-lg">
            <%= pluralize(@submission.errors.count, "error") %> prevented this submission from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-300 space-y-1">
            <% @submission.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :song_title, "Song Title", class: "block text-sm font-bold mb-3 text-white" %>
        <%= f.text_field :song_title, required: true,
            class: "input-glass", 
            placeholder: "Enter the song title" %>
      </div>

      <div>
        <%= f.label :artist, "Artist", class: "block text-sm font-bold mb-3 text-white" %>
        <%= f.text_field :artist, required: true,
            class: "input-glass", 
            placeholder: "Enter the artist name" %>
      </div>

      <div>
        <%= f.label :song_url, "Streaming Link (optional)", class: "block text-sm font-bold mb-3 text-white" %>
        <%= f.url_field :song_url,
            class: "input-glass", 
            placeholder: "Spotify, Apple Music, YouTube, etc." %>
        <p class="text-xs text-gray-500 mt-2">
          ğŸ”— Share a link so others can easily listen to your submission
        </p>
      </div>

      <div>
        <%= f.label :comment, "Your Comment (optional)", class: "block text-sm font-bold mb-3 text-white" %>
        <%= f.text_area :comment, rows: 4,
            class: "input-glass", 
            placeholder: "Why did you choose this song? Any interesting story behind it?" %>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= f.submit "Submit Song", class: "btn-primary cursor-pointer" %>
        <%= link_to "Cancel", group_season_week_path(@group, @season, @week), class: "text-gray-400 hover:text-white font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
