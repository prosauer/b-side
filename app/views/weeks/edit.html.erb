<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to group_season_week_path(@group, @season, @week), class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Week <%= @week.number %>
    <% end %>
  </div>

  <div class="glass-card p-8">
    <h1 class="text-4xl font-bold mb-8 text-white">Edit Week <%= @week.number %> Category</h1>

    <%= form_with model: @week, url: group_season_week_path(@group, @season, @week), method: :patch, class: "space-y-6" do |f| %>
      <% if @week.errors.any? %>
        <div class="glass-medium border border-red-500/30 rounded-2xl p-6 bg-red-500/10">
          <h3 class="font-bold text-red-400 mb-3 text-lg">
            <%= pluralize(@week.errors.count, "error") %> prevented this week from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-300 space-y-1">
            <% @week.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :category, "Category", class: "block text-sm font-bold mb-3 text-white" %>
        <%= f.text_field :category, class: "input-glass", 
            placeholder: "e.g., Best Song from 2010, Your Guilty Pleasure" %>
        <p class="text-xs text-gray-500 mt-2">
          ðŸŽµ Choose a creative category that fits the B-side theme!
        </p>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= f.submit "Update Category", class: "btn-primary cursor-pointer" %>
        <%= link_to "Cancel", group_season_week_path(@group, @season, @week), class: "text-gray-400 hover:text-white font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
