<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to group_season_path(@group, @season), class: "text-purple-400 hover:text-purple-300 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Season <%= @season.number %>
    <% end %>
  </div>

  <%# Week Header %>
  <div class="bg-gray-800 rounded-lg p-8 border border-gray-700 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold">Week <%= @week.number %></h1>
      <% if @week.submission_phase? %>
        <span class="bg-blue-500/20 text-blue-400 px-4 py-2 rounded-full text-sm font-semibold">
          üìù Submissions Open
        </span>
      <% elsif @week.voting_phase? %>
        <% if @remaining_points&.zero? %>
          <span class="bg-green-500/20 text-green-400 px-4 py-2 rounded-full text-sm font-semibold">
            ‚úÖ Voting Submitted
          </span>
        <% else %>
          <span class="bg-yellow-500/20 text-yellow-400 px-4 py-2 rounded-full text-sm font-semibold">
            üó≥Ô∏è Voting Open
          </span>
        <% end %>
      <% else %>
        <span class="bg-green-500/20 text-green-400 px-4 py-2 rounded-full text-sm font-semibold">
          üèÜ Results
        </span>
      <% end %>
    </div>

    <div class="bg-purple-600/20 border border-purple-500 rounded-lg p-4 mb-4">
      <p class="text-sm text-purple-300 mb-1">Category</p>
      <p class="text-2xl font-bold text-purple-400"><%= @week.category %></p>
    </div>

    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <p class="text-gray-400">Submission Deadline</p>
        <p class="font-semibold"><%= @week.submission_deadline.strftime("%b %d, %I:%M %p") %></p>
      </div>
      <div>
        <p class="text-gray-400">Voting Deadline</p>
        <p class="font-semibold"><%= @week.voting_deadline.strftime("%b %d, %I:%M %p") %></p>
      </div>
    </div>

    <% if @group.memberships.find_by(user: current_user).admin? %>
      <div class="mt-4 pt-4 border-t border-gray-700 flex flex-wrap items-center gap-4">
        <%= link_to "Edit Week", edit_group_season_week_path(@group, @season, @week),
            class: "text-purple-400 hover:text-purple-300 text-sm underline" %>
      </div>
    <% end %>
  </div>

  <%# Submission Phase %>
  <% if @week.submission_phase? %>
    <div class="bg-gray-800 rounded-lg p-8 border border-gray-700 mb-6">
      <h2 class="text-xl font-semibold mb-4">Submit Your Song</h2>
      
      <% if @user_submission %>
        <div class="bg-green-500/10 border border-green-500 rounded-lg p-4 space-y-3">
          <p class="text-green-400 font-semibold">‚úì You've submitted:</p>
          <% if @user_submission.tidal_id.present? %>
            <iframe src="https://embed.tidal.com/tracks/<%= @user_submission.tidal_id %>"
                    width="100%"
                    height="120"
                    class="w-full max-w-full rounded-md border-0"
                    allow="encrypted-media; fullscreen; clipboard-write https://embed.tidal.com; web-share"
                    sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox"
                    style="color-scheme: dark"
                    title="TIDAL Embed Player"></iframe>
          <% end %>
          <% if @user_submission.comment.present? %>
            <p class="text-sm text-gray-400"><%= @user_submission.comment %></p>
          <% end %>
          <%= link_to "Update Song", new_group_season_week_submission_path(@group, @season, @week),
              class: "inline-block bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold" %>
        </div>
      <% else %>
        <p class="text-gray-400 mb-4">
          Time remaining: <%= distance_of_time_in_words(Time.current, @week.submission_deadline) %>
        </p>
        <%= link_to "Submit Song", new_group_season_week_submission_path(@group, @season, @week),
            class: "inline-block bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold" %>
      <% end %>
    </div>

    <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
      <p class="text-gray-400 text-center">
        Submissions from other members will be visible after the submission deadline.
      </p>
    </div>
  <% end %>

  <%# Voting Phase %>
  <% if @week.voting_phase? %>
    <div class="space-y-6">
      <% if @user_submission %>
        <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
          <h2 class="text-xl font-semibold mb-4">Your Submission</h2>
          <div class="bg-gray-900 rounded-lg p-4">
            <p class="text-lg font-semibold mb-1"><%= @user_submission.song_title %></p>
            <p class="text-purple-400 mb-2"><%= @user_submission.artist %></p>
            <% if @user_submission.tidal_id.present? %>
              <iframe src="https://embed.tidal.com/tracks/<%= @user_submission.tidal_id %>"
                      width="100%"
                      height="120"
                      class="w-full max-w-full rounded-md border-0"
                      allow="encrypted-media; fullscreen; clipboard-write https://embed.tidal.com; web-share"
                      sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox"
                      style="color-scheme: dark"
                      title="TIDAL Embed Player"></iframe>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700"
           data-controller="vote-points"
           data-vote-points-total-points-value="<%= Week::TOTAL_POINTS_PER_USER %>"
           data-vote-points-max-per-song-value="<%= @group.max_points_per_song %>">
        <div class="flex flex-wrap items-center justify-between gap-4 mb-4">
          <h2 class="text-xl font-semibold">Vote on Submissions</h2>
          <%= button_to "Listen to Playlist",
                        generate_playlist_group_season_week_path(@group, @season, @week),
                        method: :post,
                        form: { data: { turbo: false } },
                        class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-semibold" %>
        </div>
        <p class="text-gray-400 mb-4">
          Time remaining: <%= distance_of_time_in_words(Time.current, @week.voting_deadline) %>
        </p>
        <div class="bg-gray-900 border border-gray-700 rounded-lg p-4 mb-4 text-sm text-gray-300">
          <p class="font-semibold text-purple-300 mb-1">
            Points remaining:
            <span data-vote-points-target="remaining"><%= @remaining_points %></span> /
            <%= Week::TOTAL_POINTS_PER_USER %>
          </p>
          <p>
            You can give up to <%= @group.max_points_per_song %> points per song. Votes and comments are editable until
            the deadline.
          </p>
        </div>

        <% if @submissions_to_vote.any? %>
          <%= form_with url: week_votes_path(@week), method: :post do %>
            <div class="space-y-4">
              <% @submissions_to_vote.each do |submission| %>
                <% user_vote = @user_votes[submission.id] %>
                <% user_like = @user_likes[submission.id] %>
                <% points_for_song = user_vote&.score.to_i %>
                <div class="bg-gray-900 rounded-lg p-4 border border-gray-700">
                  <div class="mb-4">
                    <div class="flex items-start justify-between gap-4">
                      <div>
                        <p class="text-lg font-semibold mb-1"><%= submission.song_title %></p>
                        <p class="text-purple-400 mb-1"><%= submission.artist %></p>
                      </div>
                      <%= render "likes/button", submission: submission, user_like: user_like %>
                    </div>
                    <% if submission.comment.present? %>
                      <p class="text-sm text-gray-300 italic bg-gray-800 p-3 rounded">
                        "<%= submission.comment %>"
                      </p>
                    <% end %>
                    <% if submission.tidal_id.present? %>
                      <iframe src="https://embed.tidal.com/tracks/<%= submission.tidal_id %>"
                              width="100%"
                              height="120"
                              class="w-full max-w-full rounded-md border-0"
                              allow="encrypted-media; fullscreen; clipboard-write https://embed.tidal.com; web-share"
                              sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox"
                              style="color-scheme: dark"
                              title="TIDAL Embed Player"></iframe>
                    <% end %>
                  </div>

                  <div class="flex flex-wrap items-center gap-3 text-sm text-gray-300">
                    <span class="font-semibold">Points</span>
                    <button type="button"
                            class="h-8 w-8 rounded-full bg-gray-800 border border-gray-600 text-white hover:bg-gray-700"
                            data-action="click->vote-points#decrement"
                            data-submission-id="<%= submission.id %>">
                      -
                    </button>
                    <%= text_field_tag "votes[#{submission.id}][score]",
                                       points_for_song,
                                       readonly: true,
                                       inputmode: "numeric",
                                       pattern: "\\d*",
                                       class: "w-16 text-center bg-gray-800 border border-gray-600 rounded px-2 py-1 text-white",
                                       data: { vote_points_target: "score", submission_id: submission.id } %>
                    <button type="button"
                            class="h-8 w-8 rounded-full bg-gray-800 border border-gray-600 text-white hover:bg-gray-700"
                            data-action="click->vote-points#increment"
                            data-submission-id="<%= submission.id %>">
                      +
                    </button>
                    <span class="text-xs text-gray-500">Max <%= @group.max_points_per_song %></span>
                  </div>

                  <div class="mt-4">
                    <%= label_tag "votes_#{submission.id}_comment", "Comment (optional)",
                                  class: "block text-sm font-semibold mb-2" %>
                    <%= text_area_tag "votes[#{submission.id}][comment]",
                                      user_vote&.comment,
                                      rows: 2,
                                      id: "votes_#{submission.id}_comment",
                                      class: "w-full bg-gray-800 border border-gray-600 rounded px-4 py-2",
                                      placeholder: "Share your thoughts..." %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="mt-6 space-y-2">
              <% vote_button_label = @user_votes.present? ? "Update votes" : "Submit votes" %>
              <%= button_tag vote_button_label,
                             type: "submit",
                             class: "w-full bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded font-semibold disabled:opacity-60 disabled:cursor-not-allowed",
                             data: { vote_points_target: "submit" },
                             disabled: @remaining_points != 0 %>
              <p class="text-xs text-gray-400" data-vote-points-target="helper">
                Allocate all points to enable submission.
              </p>
            </div>
          <% end %>
        <% else %>
          <div class="bg-green-500/10 border border-green-500 rounded-lg p-4">
            <p class="text-green-400 text-center">
              ‚úì No submissions to vote on yet. Check back after the submission deadline.
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Results Phase %>
  <% if @week.results_phase? %>
    <div class="space-y-6">
      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
        <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
          <h2 class="text-xl font-semibold">Results</h2>
          <div class="flex flex-wrap items-center gap-4">
            <%= link_to "Full Leaderboard", group_weekly_leaderboard_path(@group, week_id: @week.id), 
                class: "text-purple-400 hover:text-purple-300 text-sm" %>
            <%= button_to "Listen to Playlist",
                          generate_playlist_group_season_week_path(@group, @season, @week),
                          method: :post,
                          form: { data: { turbo: false } },
                          class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-semibold" %>
          </div>
        </div>

        <% if @submissions.any? %>
          <div class="space-y-4">
            <% @submissions.sort_by { |s| -s.total_points }.each_with_index do |submission, index| %>
              <div class="bg-gray-900 rounded-lg p-4 border <%= index == 0 ? 'border-yellow-500' : 'border-gray-700' %>">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center mb-2">
                      <% if index == 0 %>
                        <span class="text-2xl mr-2">üèÜ</span>
                      <% elsif index == 1 %>
                        <span class="text-2xl mr-2">ü•à</span>
                      <% elsif index == 2 %>
                        <span class="text-2xl mr-2">ü•â</span>
                      <% else %>
                        <span class="text-gray-500 font-bold mr-2 text-lg">#<%= index + 1 %></span>
                      <% end %>
                      <div>
                        <p class="text-lg font-semibold"><%= submission.song_title %></p>
                        <p class="text-purple-400 text-sm"><%= submission.artist %></p>
                      </div>
                    </div>
                    <p class="text-sm text-gray-400 mb-2">by <%= submission.user.display_name %></p>
                    <% if submission.comment.present? %>
                      <p class="text-sm text-gray-300 italic bg-gray-800 p-3 rounded mb-2">
                        "<%= submission.comment %>"
                      </p>
                    <% end %>
                    <% if submission.tidal_id.present? %>
                      <iframe src="https://embed.tidal.com/tracks/<%= submission.tidal_id %>"
                              width="100%"
                              height="120"
                              class="w-full max-w-full rounded-md border-0"
                              allow="encrypted-media; fullscreen; clipboard-write https://embed.tidal.com; web-share"
                              sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox"
                              style="color-scheme: dark"
                              title="TIDAL Embed Player"></iframe>
                    <% end %>
                  </div>
                  <div class="text-right ml-4">
                    <p class="text-3xl font-bold text-purple-400">
                      <%= submission.total_points %>
                    </p>
                    <p class="text-xs text-gray-400">
                      <%= pluralize(submission.votes.sum(:score), "point") %>
                    </p>
                  </div>
                </div>

                <%# Show votes/comments %>
                <% if submission.votes.any? %>
                  <div class="mt-4 pt-4 border-t border-gray-800">
                    <p class="text-sm font-semibold mb-2 text-gray-400">Points:</p>
                    <div class="space-y-2">
                      <% submission.votes.includes(:voter).each do |vote| %>
                        <div class="text-sm bg-gray-800 p-2 rounded">
                          <span class="font-semibold"><%= vote.voter.display_name %>:</span>
                          <span class="text-purple-400"><%= pluralize(vote.score, "point") %></span>
                          <% if vote.comment.present? %>
                            <p class="text-gray-400 mt-1 italic">"<%= vote.comment %>"</p>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-400 text-center py-8">No submissions for this week</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
